# ============================================================================
# FastAPI Core Settings
# ============================================================================

# Application Environment (development, staging, production)
APP_ENV=development

# Debug mode (True for development, False for production)
DEBUG=True

# Secret key for JWT token signing and verification (generate a strong secret in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Algorithm used for JWT tokens
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL (for production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smartfarm

# SQLite (for development)
# DATABASE_URL=sqlite:///./sql_app.db

# ============================================================================
# CORS & Security
# ============================================================================

# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Set to True to allow all origins (for development only!)
CORS_ALLOW_CREDENTIALS=True

# Allowed methods for CORS
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers for CORS
CORS_HEADERS=*


# ============================================================================
# Cache & Celery
# ============================================================================

# Redis URL for caching and Celery
REDIS_URL=redis://localhost:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# API & Authentication
# ============================================================================

# JWT Secret (generate a strong random string)
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Expiration (in seconds)
ACCESS_TOKEN_LIFETIME=3600  # 1 hour
REFRESH_TOKEN_LIFETIME=86400  # 24 hours

# ============================================================================
# Monitoring & Logging
# ============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Frontend Configuration
# ============================================================================

# Frontend URL (used for CORS and email templates)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# File Storage
# ============================================================================

# Media files URL (relative to your domain)
MEDIA_URL=/media/

# Static files URL (relative to your domain)
STATIC_URL=/static/

# ============================================================================
# Third-party Services
# ============================================================================

# Google OAuth2 (optional)
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2 (optional)
# GITHUB_OAUTH2_CLIENT_ID=your-github-client-id
# GITHUB_OAUTH2_CLIENT_SECRET=your-github-client-secret
API_VERSION=v1
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
