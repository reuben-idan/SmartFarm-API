# ============================================================================
# FastAPI Core Settings
# ============================================================================

# Application Environment (development, staging, production)
APP_ENV=development

# Debug mode (True for development, False for production)
DEBUG=True

# Secret key for JWT token signing and verification (generate a strong secret in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Algorithm used for JWT tokens
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Firebase Configuration
# ============================================================================

# Firebase Project Configuration
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your-client-x509-cert-url

# Web API Key for client-side Firebase operations
FIREBASE_WEB_API_KEY=your-web-api-key

# ============================================================================
# Database Configuration
# ============================================================================

# Database URL (SQLAlchemy format)
DATABASE_URL=sqlite:///./smartfarm.db

# ============================================================================
# Email Configuration
# ============================================================================

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# Frontend URLs
# ============================================================================

# Base URL for frontend (used for email templates, etc.)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Security Settings
# ============================================================================

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Session configuration
SESSION_SECRET=your-session-secret
SESSION_LIFETIME=3600  # 1 hour in seconds
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL (for production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smartfarm

# SQLite (for development)
# DATABASE_URL=sqlite:///./sql_app.db

# ============================================================================
# CORS & Security
# ============================================================================

# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Set to True to allow all origins (for development only!)
CORS_ALLOW_CREDENTIALS=True

# Allowed methods for CORS
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers for CORS
CORS_HEADERS=*


# ============================================================================
# Cache & Celery
# ============================================================================

# Redis URL for caching and Celery
REDIS_URL=redis://localhost:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# API & Authentication
# ============================================================================

# JWT Secret (generate a strong random string)
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Expiration (in seconds)
ACCESS_TOKEN_LIFETIME=3600  # 1 hour
REFRESH_TOKEN_LIFETIME=86400  # 24 hours

# ============================================================================
# Monitoring & Logging
# ============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Frontend Configuration
# ============================================================================

# Frontend URL (used for CORS and email templates)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# File Storage
# ============================================================================

# Media files URL (relative to your domain)
MEDIA_URL=/media/

# Static files URL (relative to your domain)
STATIC_URL=/static/

# ============================================================================
# Third-party Services
# ============================================================================

# Google OAuth2 (optional)
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2 (optional)
# GITHUB_OAUTH2_CLIENT_ID=your-github-client-id
# GITHUB_OAUTH2_CLIENT_SECRET=your-github-client-secret
API_VERSION=v1
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
