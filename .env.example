# ============================================================================
# Django Core Settings
# ============================================================================

# Debug mode (True for development, False for production)
DEBUG=True

# Secret key for cryptographic signing (keep this secret in production!)
SECRET_KEY=your-secret-key-here

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.0.1,0.0.0.0

# Environment (development, production, test)
DJANGO_ENV=development

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL
DB_NAME=smartfarm
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Database URL (alternative to individual DB_* variables)
# Format: postgres://user:password@host:port/dbname
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/smartfarm

# ============================================================================
# CORS & Security
# ============================================================================

# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Set to True to allow all origins (for development only!)
CORS_ALLOW_ALL_ORIGINS=False

# ============================================================================
# Email Configuration
# ============================================================================

# Email backend (console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (uncomment and configure for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=webmaster@smartfarm.com
# SERVER_EMAIL=webmaster@smartfarm.com

# ============================================================================
# Cache & Celery
# ============================================================================

# Redis URL for caching and Celery
REDIS_URL=redis://localhost:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# API & Authentication
# ============================================================================

# JWT Secret (generate a strong random string)
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Expiration (in seconds)
ACCESS_TOKEN_LIFETIME=3600  # 1 hour
REFRESH_TOKEN_LIFETIME=86400  # 24 hours

# ============================================================================
# Monitoring & Logging
# ============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Frontend Configuration
# ============================================================================

# Frontend URL (used for CORS and email templates)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# File Storage
# ============================================================================

# Media files URL (relative to your domain)
MEDIA_URL=/media/

# Static files URL (relative to your domain)
STATIC_URL=/static/

# ============================================================================
# Third-party Services
# ============================================================================

# Google OAuth2 (optional)
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2 (optional)
# GITHUB_OAUTH2_CLIENT_ID=your-github-client-id
# GITHUB_OAUTH2_CLIENT_SECRET=your-github-client-secret
API_VERSION=v1
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
